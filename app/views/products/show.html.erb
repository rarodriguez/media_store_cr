<div class="page-header">
  <%= link_to products_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_product_path(@product), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show product</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @product.name %></dd>

  <dt>Description:</dt>
  <dd><%= @product.description %></dd>

  <dt>Price:</dt>
  <dd><%= @product.price %></dd>

  <dt>Downloads:</dt>
  <dd><%= @product.downloads %></dd>

  <dt>Store:</dt>
  <dd><%= @product.store_id %></dd>

  <dt>Tags:</dt>
  <dd><%= @product.tags %></dd>

  <dt>Small description:</dt>
  <dd><%= @product.small_description %></dd>

  <dt>Author:</dt>
  <dd><%= @product.author %></dd>

  <dt>Release date:</dt>
  <dd><%= @product.release_date %></dd>

  <dt>Version:</dt>
  <dd><%= @product.version %></dd>

  <%= image_tag @product.file.url, width: '90%' %>

</dl>
