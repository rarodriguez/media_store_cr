<div class="page-header">
  <%= link_to admin_reviews_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_admin_review_path(@review), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show review</h1>
</div>

<dl class="dl-horizontal">
  <dt>Product:</dt>
  <dd><%= @review.product_id %></dd>

  <dt>User:</dt>
  <dd><%= @review.user.try(:email) %></dd>

  <dt>Comment:</dt>
  <dd><%= @review.comment %></dd>

  <dt>Rating:</dt>
  <dd><%= @review.rating %></dd>

</dl>
